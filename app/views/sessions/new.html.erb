<div class="wrap">
  <% provide(:title, "Log in") %>
  <h1>Log in</h1>

  <%= form_for(:session, url: login_path) do |f| %>
    <div class="form-group">
      <%= f.label :email, class:'bmd-label-floating' %>
      <%= f.email_field :email, class: 'form-control' %>
      <span class="bmd-help">Login with your email</span>
    </div>
    <div class="form-group">
      <%= f.label :password, class:'bmd-label-floating' %>
      <%= f.password_field :password, class: 'form-control' %>
      <span class="bmd-help">Your password</span>
      <%= link_to "(forgot password)", new_password_reset_path %>
    </div>

      <%= f.submit "Log in", class: "btn btn-primary" %>
  <% end %>
    <p>Dont have account yet </p>
    <p><%= link_to "Sign up now!", signup_path %></p>
</div>
