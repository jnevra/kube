<%= form_for(@user, url: signup_path) do |f| %>
<%= render 'shared/error_messages' %>
 <div class="form-group">
  <%= f.label :name, 'Your Name', class:'bmd-label-floating'%>
  <%= f.text_field :name, class: 'form-control' %>
  <span class="bmd-help">Please add your name</span>
</div>
<div class="form-group">
  <%= f.label :email, 'Your Email', class:'bmd-label-floating'%>
  <%= f.email_field :email, class: 'form-control' %>
  <span class="bmd-help">We'll never share your email with anyone else.</span>
</div>
<div class="form-group">
  <%= f.label :password, 'Your Password', class:'bmd-label-floating' %>
  <%= f.password_field :password, class: 'form-control'%>
  <span class="bmd-help">Minimum 6 characters.</span>
</div>
<div class="form-group">
  <%= f.label :password_confirmation, "Confirmation", class:'bmd-label-floating' %>
  <%= f.password_field :password_confirmation, class: 'form-control'%>
  <span class="bmd-help">Confirmation Password.</span>
</div>
<%= f.submit "Create my account", class: "btn btn-primary" %>
<% end %>
